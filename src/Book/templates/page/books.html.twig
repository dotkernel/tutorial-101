{% extends '@layout/default.html.twig' %}

{% block title %}Books{% endblock %}

{% block content %}
    <div class="container">
        <h2>Book Titles</h2>
        <table class="table table-bordered" style="table-layout: fixed;">
            <thead>
            <tr>
                <th>Book ID</th>
                <th>Title</th>
            </tr>
            </thead>
            <tbody>
            {% for title in titles %}
                <tr>
                    <td>{{ title.id }}</td>
                    <td>{{ title.title }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <h2>Book Authors</h2>
        <table class="table table-bordered" style="table-layout: fixed;">
            <thead>
            <tr>
                <th>Book ID</th>
                <th>Author</th>
            </tr>
            </thead>
            <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.author }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
